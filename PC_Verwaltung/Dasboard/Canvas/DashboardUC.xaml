<UserControl x:Class="PC_Verwaltung.Dasboard.Canvas.DashboardUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PC_Verwaltung.Dasboard.Canvas"
             mc:Ignorable="d" 
             Height="auto" Width="auto">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" Height="300" Background="#FFF3F3F3" Margin="10">
                <Grid.Effect>
                    <DropShadowEffect BlurRadius="20" Color="#FFDEDEDE" ShadowDepth="1"/>
                </Grid.Effect>

                <StackPanel Width="200">
                    <TextBlock Foreground="DarkGray" FontSize="18" TextAlignment="Center" Text="Dashboard"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
